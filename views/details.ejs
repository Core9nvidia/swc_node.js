<!DOCTYPE html>
<html>
<head>
    <title>Contact Us</title>
    <link href="../public/styles.css" rel="stylesheet">
    <style>
        ul{
            list-style: none;
        }
        li{
            float:right;
        }
        nav {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: rgb(156, 150, 150);
        }

        li a {
            color: rgba(255, 255, 255, 0.644);
            text-align: center;
            padding: 20px;
            margin: auto;
            text-decoration: none;
        }
        #items{
            margin-right: 40px;
        }
        #name{
            color: rgba(255, 255, 255, 0.644);
            text-align: center;
            padding: 14px 16px;
            margin-left: 20px;
            text-decoration: none;
            float:left;
            font-size: larger;
        }
        .container{
            margin-left: 40px;
            margin-right: 40px;
            font-size: large;
            padding:40px;
        }
        #e2{
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div id="name" >DAILY JOURNAL</div>
        <div id="items" class="flex">
            <ul>
                <li><a href='/'>HOME</a></li>
                <li><a href='/about'>ABOUT US</a></li>
                <li><a href='/contact'>CONTACT US</a></li>
            </ul>
        </div>
    </nav>
    
    <div class="container">
        <h2><%= blog.title %></h2>
        <div id="myid">
          <div id="e1"><p><%= blog.body %></p></div><br>
          <button data-id= "<%= blog._id %>"  id="e2">Delete</button>
        </div>
        
        <!-- <a class="delete" data-doc="<%= blog._id %>">delete</a> -->
      </div>
      <script>
          console.log("oo");
          const btn=document.querySelector('#e2');
          btn.addEventListener("click",function(){
              const id = btn.dataset.id;
              const url=`/blog/${btn.dataset.id}`;
              console.log(id);
              fetch(url,{method:"DELETE"})
                .then((data)=>data.json())
                .then((data)=>{
                    window.location.href=data.redirect;
                })
                .catch((err)=>console.log(err));
          });
      </script>
</body>
</html>